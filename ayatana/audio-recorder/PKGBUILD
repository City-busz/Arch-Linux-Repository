# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=audio-recorder
pkgver=0.4.4
pkgrel=1
pkgdesc="Audio recorder that allows you to record your favourite music and audio to a file"
arch=('i686' 'x86_64')
url="https://launchpad.net/audio-recorder"
license=('GPL')
depends=('gnome-media' 'indicator-application>=0.2' 'hicolor-icon-theme' 'xdg-utils')
makedepends=('intltool')
install=$pkgname.install
source=(https://launchpad.net/~osmoma/+archive/$_pkgname/+files/${pkgname}_${pkgver}~natty.tar.gz)
md5sums=('0ba801527d51ca3f46cf2ac1cbbf5b2c')

build() {
  cd "$srcdir/$pkgname"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
  make
}

package() {
  cd "$srcdir/$pkgname"

  make DESTDIR="$pkgdir/" install
}
