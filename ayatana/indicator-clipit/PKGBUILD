# Maintainer: György Balló <ballogy@freestart.hu>
_pkgname=clipit
pkgname=indicator-$_pkgname
pkgver=1.3.12
pkgrel=1
pkgdesc="Lightweight, fully featured GTK+ clipboard manager"
arch=('i686' 'x86_64')
url="http://clipit.rspwn.com/"
license=('GPL')
depends=('indicator-application>=0.2.4')
makedepends=('intltool>=0.23')
source=(http://downloads.sourceforge.net/gtk$_pkgname/$_pkgname-$pkgver.tar.gz)
md5sums=('6fdf952c3d12081528b7883be4fb7d7f')

build() {
  cd "$srcdir/$_pkgname-$pkgver"


  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --enable-appindicator \
              PKG_CONFIG=pkg-config
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
