# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=light-themes
pkgver=0.1.8.3
pkgrel=1
pkgdesc="Includes Ambiance and Radiance themes."
arch=('any')
url="https://launchpad.net/light-themes/"
license=('custom')
depends=('gtk-engine-murrine>=0.90.3+git20100810' 'humanity-icon-theme' 'ubuntu-mono')
source=(https://launchpad.net/ubuntu/+archive/primary/+files/${pkgname}_$pkgver.tar.gz)
md5sums=('21fc798cce84ff7d45b3b4662c938dcf')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p $pkgdir/usr/share/themes
  cp -r Ambiance Radiance $pkgdir/usr/share/themes
  install -Dm644 debian/copyright ${pkgdir}/usr/share/licenses/$pkgname/copyright
}
