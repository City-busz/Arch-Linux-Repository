# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=gnome-themes-ubuntu
pkgver=0.6.1
pkgrel=1
pkgdesc="Ubuntu community themes"
arch=('any')
url="https://launchpad.net/ubuntu/+source/gnome-themes-ubuntu"
license=('custom')
depends=('gtk-engines' 'gtk-engine-murrine' 'humanity-icon-theme')
source=(https://launchpad.net/ubuntu/+archive/primary/+files/${pkgname}_$pkgver.tar.gz)
md5sums=('072e77e9ecc4d19ab11f0268ddbab5ec')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p $pkgdir/usr/share/themes
  cp -r Dust* New* $pkgdir/usr/share/themes
  install -Dm644 debian/copyright ${pkgdir}/usr/share/licenses/$pkgname/copyright
}
