# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=enigmail
pkgver=1.3.1
pkgrel=1
pkgdesc="OpenPGP security extension for Mozilla Thunderbird"
arch=('any')
url="http://enigmail.mozdev.org/"
license=('MPL' 'GPL')
depends=('thunderbird>=6.0')
options=(!strip)

_extid={847b3a00-7ab1-11d4-8f02-006008948af5}
_dstdir=/usr/lib/thunderbird-6.0/extensions/$_extid

source=(https://addons.mozilla.org/en-US/thunderbird/downloads/file/129758/$pkgname-$pkgver-tb+sm-windows.xpi)
md5sums=('7376f5d1675850283362e5cf92c4a930')

build() {
  /bin/true
}

package() {
  mkdir -p $pkgdir$_dstdir
  cp -R $srcdir/* $pkgdir$_dstdir
  rm $pkgdir$_dstdir/$pkgname-$pkgver-tb+sm-windows.xpi
}
