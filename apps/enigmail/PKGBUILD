# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=enigmail
pkgver=1.3.2
pkgrel=2
pkgdesc="OpenPGP security extension for Mozilla Thunderbird"
arch=(any)
url="http://enigmail.mozdev.org/"
license=(MPL GPL)
depends=('thunderbird>=7.0')
options=(!strip)

_extid={847b3a00-7ab1-11d4-8f02-006008948af5}
_dstdir=/usr/lib/thunderbird-7.0.1/extensions/$_extid

source=(https://addons.mozilla.org/en-US/thunderbird/downloads/file/131061/$pkgname-$pkgver-tb+sm-windows.xpi)
md5sums=(6025c4d71eb58975a8847dc9feba64fb)

package() {
  mkdir -p $pkgdir$_dstdir
  cp -R $srcdir/* $pkgdir$_dstdir
  rm $pkgdir$_dstdir/$pkgname-$pkgver-tb+sm-windows.xpi
}
