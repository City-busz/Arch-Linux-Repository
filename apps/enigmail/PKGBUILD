# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=enigmail
pkgver=1.3.4
_fileid=138440
pkgrel=1
pkgdesc="OpenPGP security extension for Mozilla Thunderbird"
arch=('any')
url="http://enigmail.mozdev.org/"
license=('MPL' 'GPL')
depends=('thunderbird>=9.0')
options=('!strip')

_extid={847b3a00-7ab1-11d4-8f02-006008948af5}
_dstdir=/usr/lib/thunderbird/extensions/$_extid

source=(https://addons.mozilla.org/en-US/thunderbird/downloads/file/$_fileid/$pkgname-$pkgver-tb+sm-windows.xpi)
md5sums=('d81623daa537cc7991460f38362ceb86')

package() {
  mkdir -p $pkgdir$_dstdir
  cp -R $srcdir/* $pkgdir$_dstdir
  rm $pkgdir$_dstdir/$pkgname-$pkgver-tb+sm-windows.xpi
}
