# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=hotot-hg
pkgver=889
pkgrel=1
pkgdesc="Lightweight, flexible microblogging client"
arch=('any')
url="http://hotot.org/"
license=('GPL')
depends=('libkeybinder' 'python-notify' 'python-pycurl' 'pywebkitgtk')
makedepends=('mercurial' 'python-distutils-extra')
optdepends=('libappindicator: application indicator support')

_hgroot="https://hotot.googlecode.com/hg/"
_hgrepo="hotot"

build() {
  cd "$srcdir"
  msg "Connecting to Mercurial server...."

  if [ -d $_hgrepo ] ; then
    cd $_hgrepo
    hg pull -u
    msg "The local files are updated."
  else
    hg clone $_hgroot $_hgrepo
  fi

  msg "Mercurial checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_hgrepo-build"
  cp -r "$srcdir/$_hgrepo" "$srcdir/$_hgrepo-build"
  cd "$srcdir/$_hgrepo-build"

  #
  # BUILD HERE
  #

  sed -i 's@^#!.*python$@#!/usr/bin/python2@' hotot/*

  python2 setup.py build
}

package() {
  cd "$srcdir/$_hgrepo-build"

  python2 setup.py install --root=$pkgdir/ --optimize=1
} 

