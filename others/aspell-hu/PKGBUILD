# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=aspell-hu
_pkgname=aspell6-hu
pkgver=0.99.4.2
_pkgver=0.99.4.2-0
pkgrel=1
pkgdesc="Hungarian spellcheck dictionary for aspell"
arch=('any')
url="http://aspell.net/"
license=('GPL')
depends=('aspell')
source=(ftp://ftp.gnu.org/gnu/aspell/dict/hu/$_pkgname-$_pkgver.tar.bz2)
md5sums=('4f4e1e98019a89d0ebf43ec59ae68254')

build() {
  cd "$srcdir/$_pkgname-$_pkgver"

  ./configure
  make
}

package() {
  cd "$srcdir/$_pkgname-$_pkgver"

  make DESTDIR="$pkgdir/" install
}
