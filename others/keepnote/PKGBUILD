# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=keepnote
pkgver=0.7
pkgrel=1
pkgdesc="A note taking application"
arch=('any')
url="http://keepnote.org/"
license=('GPL')
depends=('python2-gtkspell' 'pygtksourceview2' 'python-pysqlite' 'hicolor-icon-theme' 'xdg-utils')
install=$pkgname.install
source=(http://keepnote.org/$pkgname/download/$pkgname-$pkgver.tar.gz)
md5sums=('86ab7d9987b1abc357a412d68893c2b4')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's|^#!/usr/bin/env python$|#!/usr/bin/env python2|' keepnote/tarfile.py

  python2 setup.py build
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
