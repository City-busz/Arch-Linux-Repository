# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=clementine
pkgver=0.6
pkgrel=2
pkgdesc="A modern music player and library organizer"
arch=('i686' 'x86_64')
url="http://www.clementine-player.org/"
license=('GPL')
depends=('boost-libs' 'gstreamer0.10-base-plugins' 'liblastfm' 'taglib' 'glew' 'libgpod' 'libmtp' 'python2-qt' 'libindicate-qt' 'hicolor-icon-theme' 'xdg-utils')
makedepends=('cmake' 'boost')
install=$pkgname.install
source=(http://clementine-player.googlecode.com/files/$pkgname-$pkgver.tar.gz)
md5sums=('7b7ee4c16f648a15eb2cff9ed2163e0e')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
