# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=rdflib
pkgver=3.1.0
pkgrel=1
pkgdesc="A Python library for working with RDF"
arch=('any')
url="http://www.rdflib.net/"
license=('BSD')
depends=('python2-distribute')
source=(http://rdflib.googlecode.com/files/$pkgname-$pkgver.tar.gz)
sha1sums=('bbef5011fcd9cfa296a8ef33ac2885416b97da2d')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  sed -i 's@^#!.*python$@#!/usr/bin/python2@' rdflib/plugins/parsers/{ntriples,notation3}.py
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
