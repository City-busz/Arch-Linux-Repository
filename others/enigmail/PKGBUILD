# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=enigmail
pkgver=1.2
pkgrel=1
pkgdesc="OpenPGP security extension for Mozilla Thunderbird"
arch=('any')
url="http://enigmail.mozdev.org/"
license=('MPL' 'GPL')
depends=('thunderbird>=3.1')
options=(!strip)

_extid={847b3a00-7ab1-11d4-8f02-006008948af5}
_dstdir=/usr/lib/thunderbird-5.0/extensions/$_extid

source=(https://addons.mozilla.org/en-US/thunderbird/downloads/file/124319/$pkgname-$pkgver-sm-linux.xpi)
md5sums=('0f7b9be03659643592f04b4f0cab5986')

build() {
  /bin/true
}

package() {
  mkdir -p $pkgdir$_dstdir
  cp -R $srcdir/* $pkgdir$_dstdir
  rm $pkgdir$_dstdir/$pkgname-$pkgver-sm-linux.xpi
}
