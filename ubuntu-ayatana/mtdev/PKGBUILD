# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=mtdev
pkgver=1.1.0
pkgrel=1
pkgdesc="Kernel multi-touch transformation library"
arch=('i686' 'x86_64')
url="https://launchpad.net/mtdev"
license=('MIT')
depends=('glibc')
options=(!libtool)
source=(http://launchpad.net/mtdev/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('6620123d2e6c1403343502b9d359fe9b')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/$pkgname/COPYING
}
