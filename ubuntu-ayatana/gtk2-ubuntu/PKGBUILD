pkgbase=gtk2-ubuntu
pkgname=('gtk2-ubuntu' 'gtk-update-icon-cache-ubuntu')
pkgver=2.24.6
pkgrel=3
arch=('i686' 'x86_64')
url="http://www.gtk.org/"
makedepends=('atk' 'pango' 'libxcursor' 'libxinerama' 'libxrandr' 'libxi' 'libxcomposite' 'libxdamage'
             'shared-mime-info' 'cairo' 'libcups' 'gdk-pixbuf2' 'gobject-introspection')
options=('!libtool' '!docs')
license=('LGPL')
source=(http://ftp.gnome.org/pub/gnome/sources/gtk+/2.24/gtk+-${pkgver}.tar.xz
        xid-collision-debug.patch
        gtk2-dont-ellipsize-filters.diff
        010_make_bg_changes_queue_repaint.patch
        012_ubuntu-set-grab-add.patch
        043_ubuntu_menu_proxy.patch
        044_grips.patch
        065_gir_set_packages.patch
        072_indicator_menu_update.patch
        091_bugzilla_tooltip_refresh.patch
        095_git_menus_scrolling.patch
        096_git_gtkprintsettings.patch
        100_overlay_scrollbar_loading.patch)
