# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=appmenu-qt
pkgver=0.1.4
pkgrel=1
pkgdesc="Adds support for application menu to Qt"
arch=('i686' 'x86_64')
url="https://launchpad.net/appmenu-qt"
license=('GPL')
depends=('qt-ubuntu' 'libdbusmenu-qt>=0.9.0')
makedepends=('cmake')
source=(http://launchpad.net/$pkgname/qt-4.7/$pkgver/+download/$pkgname-$pkgver.tar.bz2)
md5sums=('93f8c79e45397a832b901138a6c94544')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  cmake . -DCMAKE_INSTALL_PREFIX=/usr -DCMAKE_BUILD_TYPE=Release
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
