# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=unity-lens-applications
pkgver=0.4.12
pkgrel=1
pkgdesc="A daemon that exposes you applications with their usage statistics and status to Unity"
arch=('i686' 'x86_64')
url="https://launchpad.net/unity-lens-applications"
license=('GPL')
depends=('gconf' 'libzeitgeist>=0.3.8' 'libunity>=4.0.5' 'gnome-menus2' 'zeitgeist-extensions')
makedepends=('vala>=0.11.3' 'intltool>=0.40.0')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz
        no-db4.8.patch)
md5sums=('ecb6d80f6216fb146b7762c587f489c8'
         '3e1713c082c00642dbd6d80b33d63708')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np1 -i "$srcdir/no-db4.8.patch"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
