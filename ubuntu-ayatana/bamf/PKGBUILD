# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=bamf
pkgver=0.2.104
pkgrel=1
pkgdesc="Removes the headache of applications matching into a simple DBus daemon and c wrapper library"
arch=('i686' 'x86_64')
url="https://launchpad.net/bamf"
license=('GPL')
depends=('dbus-glib>=0.76' 'libwnck3>=3.1' 'libgtop')
options=(!libtool)
source=(http://launchpad.net/$pkgname/0.2/0.2.204/+download/$pkgname-$pkgver.tar.gz)
md5sums=('4271cd5979483f7e3a9bffc42fed6383')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
