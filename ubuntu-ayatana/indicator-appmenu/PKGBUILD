# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=indicator-appmenu
pkgver=0.2.91 
pkgrel=1
pkgdesc="An indicator to host the menus from an application"
arch=('i686' 'x86_64')
url="https://launchpad.net/indicator-appmenu"
license=('GPL')
depends=('libindicator>=0.3.19' 'libdbusmenu>=0.3.3' 'bamf>=0.2.53')
optdepends=('appmenu-gtk: support for GTK+ apps'
            'appmenu-qt: support for Qt apps')
options=(!libtool)
source=(http://launchpad.net/$pkgname/0.3/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('32d9475dad4ea0dd4c5c1da2479df54f')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
