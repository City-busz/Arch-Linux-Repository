# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=utouch-evemu
pkgver=1.0.6
pkgrel=1
pkgdesc="As part of the effort to produce an MT device and gesture testing framework, meet evemu, which provides tools to emulate kernel evdev devices"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-evemu"
license=('GPL')
depends=('glibc')
makedepends=('xmlto' 'asciidoc')
options=(!libtool)
source=(http://launchpad.net/utouch-evemu/trunk/v$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('0bed12e4ff3461728713b156ffb74cc2')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
