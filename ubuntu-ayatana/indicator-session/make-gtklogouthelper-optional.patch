     [PKG_CHECK_MODULES(GTKLOGOUTHELPER, gtk+-2.0 >= $GTK_REQUIRED_VERSION
-                                        polkit-gobject-1 >= $POLKIT_REQUIRED_VERSION)
+                                        polkit-gobject-1 >= $POLKIT_REQUIRED_VERSION,
+                                        [have_gtklogouthelper=yes])
     ]
 )
 
 
 AC_SUBST(GTKLOGOUTHELPER_CFLAGS)
 AC_SUBST(GTKLOGOUTHELPER_LIBS)
+])
 
