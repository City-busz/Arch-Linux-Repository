# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=plasma-widget-message-indicator
pkgver=0.5.7
pkgrel=1
pkgdesc="A Plasma widget which displays messages from message-indicator enabled applications"
arch=('i686' 'x86_64')
url="https://launchpad.net/plasma-widget-message-indicator"
license=('GPL')
depends=('kdelibs>=4.4' 'libindicate-qt>=0.2.5')
makedepends=('cmake>=2.6' 'automoc4')
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.bz2
        kubuntu_indicator_status.diff
        kubuntu_libindicate_06.diff)
md5sums=('8df91665c651918940963f995bf781eb'
         '60b3168d95c8b54685b3522e04b6ac5a'
         '538c11e714496e7aecc5d703de0a5d66')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np1 -i "$srcdir/kubuntu_indicator_status.diff"
  patch -Np1 -i "$srcdir/kubuntu_libindicate_06.diff"

  mkdir build
  cd build
  cmake .. -DCMAKE_BUILD_TYPE=Release \
           -DCMAKE_INSTALL_PREFIX=/usr
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver/build"

  make DESTDIR="$pkgdir/" install
}

