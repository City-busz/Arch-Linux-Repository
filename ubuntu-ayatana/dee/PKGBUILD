# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=dee
pkgver=0.5.18
pkgrel=2
pkgdesc="A library that uses DBus to provide objects allowing you to create Model-View-Controller type programs across DBus"
arch=('i686' 'x86_64')
url="https://launchpad.net/dee"
license=('LGPL')
depends=('glib2>=2.26')
makedepends=('python2' 'gobject-introspection>=0.6.3' 'gtk-doc>=1.8' 'vala')
options=(!libtool)
source=(http://launchpad.net/$pkgname/trunk/$pkgver/+download/$pkgname-$pkgver.tar.gz
        debian-changes-0.5.18-1ubuntu1.patch)
md5sums=('1e0fbf1ae0a4b4db50091ba4b9c5960f'
         'd6ab0cac0ea090ee3a0ae47b67fabf61')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  patch -Np1 -i "$srcdir/debian-changes-0.5.18-1ubuntu1.patch"

  autoreconf -fi
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static \
              PYTHON=python2
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
