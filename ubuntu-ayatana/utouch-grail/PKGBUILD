# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=utouch-grail
pkgver=2.0.1
pkgrel=1
pkgdesc="Gesture Recognition And Instantiation Library"
arch=('i686' 'x86_64')
url="https://launchpad.net/utouch-grail"
license=('GPL')
depends=('utouch-frame>=1.0')
options=('!libtool')
source=(http://launchpad.net/utouch-grail/trunk/v$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('e42168af79bc707bb14eb4323c900636')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
