# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=deja-dup-unity
_pkgname=deja-dup
pkgver=20.1
pkgrel=1
pkgdesc="Simple backup tool, that hides the complexity of backing up the Right Way and uses duplicity as the backend with Unity integration"
arch=(i686 x86_64)
url="https://launchpad.net/deja-dup"
license=(GPL)
depends=(duplicity libgnome-keyring 'libnotify>=0.7' 'libdbusmenu-gtk3>=0.3.94' 'libunity>=3.4.2' dconf hicolor-icon-theme xdg-utils)
makedepends=('vala>=0.11.6' 'intltool>=0.40.0' itstool nautilus)
optdepends=('nautilus: backup extension')
provides=("$_pkgname=$pkgver")
conflicts=("$_pkgname")
options=(!libtool)
install=$_pkgname.install
source=(http://launchpad.net/$_pkgname/20/$pkgver/+download/$_pkgname-$pkgver.tar.bz2)
md5sums=(b53325035388662fb223440951a8a478)

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$_pkgname \
              --disable-static --disable-schemas-compile
  make
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
