# Maintainer: D. Can Celasun <dcelasun[at]gmail[dot]com>

pkgname=lookit
pkgver=1.1.0
_pkgver=ac4ce48
pkgrel=1
pkgdesc="Quick screenshot uploader"
arch=(any)
url="http://zachtib.github.com/lookit/"
license=(GPL)
depends=(libappindicator libkeybinder python-keyring python-notify python-pycurl desktop-file-utils hicolor-icon-theme xdg-utils)
optdepends=('python-paramiko: upload screenshots over SSH protocol')
install=$pkgname.install
source=($pkgname-$pkgver.tar.gz::https://github.com/zachtib/$pkgname/tarball/$pkgver)
md5sums=(b18640f8a35dfa5353e5920521a594af)

build() {
  cd "$srcdir/zachtib-$pkgname-$_pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/zachtib-$pkgname-$_pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
