# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=banshee-community-extensions
pkgver=2.2.0
pkgrel=1
pkgdesc="Community Extensions for Banshee"
arch=('i686' 'x86_64')
url="http://banshee.fm/download/extensions/"
license=('GPL')
depends=('banshee>=2.2.0' 'libappindicator' 'clutter-sharp-git' 'fftw' 'lirc-utils' 'libsamplerate' 'taoframework' 'zeitgeist-sharp')
makedepends=('intltool' 'gnome-doc-utils')
options=('!libtool')
source=(http://download.banshee.fm/$pkgname/$pkgver/$pkgname-$pkgver.tar.bz2)
sha256sums=('3ac0c7e9e00b8ab7b91a8942cb5b1fc360977b15ec303756d4a440704a22bb15')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static \
              --disable-scrollkeeper \
              --enable-gnome \
              --disable-schemas-install \
              --enable-alarmclock \
              --enable-albumartwriter\
              --enable-ampache \
              --enable-appindicator \
              --enable-awn \
              --enable-clutterflow \
              --enable-coverwallpaper \
              --enable-duplicatesongdetector \
              --enable-jamendo \
              --enable-lastfmfingerprint \
              --enable-lcd \
              --enable-lirc \
              --enable-liveradio \
              --enable-lyrics \
              --enable-magnatune \
              --enable-mirage \
              --enable-openvp \
              --enable-radiostationfetcher \
              --enable-randombylastfm \
              --enable-streamrecorder \
              --enable-karaoke \
              --enable-telepathy \
              --enable-zeitgeistdataprovider \
              --with-gconf-schema-file-dir=/usr/share/gconf/schemas \
              --with-vendor-build-id=ArchLinux
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
