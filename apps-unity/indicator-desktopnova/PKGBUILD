# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=indicator-desktopnova
pkgver=1.0.0
pkgrel=2
pkgdesc="An indicator for desktopnova"
arch=('i686' 'x86_64')
url="https://launchpad.net/indicator-desktopnova"
license=('GPL')
depends=('desktopnova' 'curl>=7.16.0' 'libappindicator' 'hicolor-icon-theme' 'xdg-utils')
makedepends=('intltool')
source=(http://launchpad.net/$pkgname/1.0.x/$pkgver/+download/$pkgname-$pkgver.tar.bz2)
md5sums=('afc3fa171ae065d2e56be02464f143bb')

build() {
  cd "$srcdir/$pkgname-$pkgver"
  sed -i 's/-Werror//' src/Makefile.am

  ./autogen.sh
  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
