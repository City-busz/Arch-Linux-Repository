# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=ubuntu-defaults-list
_pkgname=gnome-session
pkgver=3.2.1
_ubuntuver=0ubuntu1
pkgrel=1
pkgdesc="Ubuntu's default file associations"
arch=(any)
url="http://packages.ubuntu.com/source/maverick/desktop-file-utils"
license=(GPL)
source=(https://launchpad.net/ubuntu/+archive/primary/+files/${_pkgname}_$pkgver-$_ubuntuver.debian.tar.gz)
md5sums=(43dd50b41ef253de2c054ff0d611c847)

build() {
  sed -i 's/openoffice\.org-/libreoffice/' debian/defaults.list
}

package() {
  cd "$srcdir"

  install -Dm644 debian/defaults.list "$pkgdir/usr/share/gnome/applications/defaults.list"
}
