pkgname=libvoikko
pkgver=3.1
pkgrel=1
pkgdesc="A library of free Finnish language tools using Malaga"
arch=('i686' 'x86_64')
url="http://voikko.sourceforge.net"
license=('GPL2')
makedepends=('python2')
options=(!libtool)
source=(http://downloads.sourceforge.net/voikko/$pkgname-$pkgver.tar.gz)
md5sums=('407c5a5ad83ef86fb76ef4502e0e8e72')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --with-dictionary-path=/usr/lib/suomi-malaga/2/mor-standard/voikko-fi_FI.lex_l
  sed 's|python $(srcdir)|python2 $(srcdir)|g' -i src/Makefile
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install

}

