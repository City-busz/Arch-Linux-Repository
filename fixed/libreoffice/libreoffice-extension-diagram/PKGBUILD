# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=libreoffice-extension-diagram
_pkgname=Diagram
pkgver=1.1.0.0
pkgrel=1
pkgdesc="LibreOffice Calc extension that validates cells based on selected rules"
arch=('any')
url="http://extensions.services.openoffice.org/project/diagram"
license=('LGPL')
groups=('libreoffice-extensions')
depends=('libreoffice' 'java-runtime')
source=(http://ftp.devall.hu/kami/go-oo/${_pkgname}_$pkgver.oxt)
md5sums=('41c9b65ad60af4b3255bbecdfef11736')

package() {
  mkdir -p $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/
  cp -R $srcdir/* $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/
  rm $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/${_pkgname}_$pkgver.oxt
}
