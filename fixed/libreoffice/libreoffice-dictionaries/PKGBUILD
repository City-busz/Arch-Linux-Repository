  install -m644 en_ZA.aff $pkgdir/usr/share/myspell/
  install -m644 en_ZA.dic $pkgdir/usr/share/myspell/
  install -m644 en_US.aff $pkgdir/usr/share/myspell/
  install -m644 en_US.dic $pkgdir/usr/share/myspell/
  install -m644 en_AU.aff $pkgdir/usr/share/myspell/
  install -m644 en_AU.dic $pkgdir/usr/share/myspell/
  install -m644 en_CA.aff $pkgdir/usr/share/myspell/
  install -m644 en_CA.dic $pkgdir/usr/share/myspell/
  install -m644 hyph_en_GB.dic $pkgdir/usr/share/hyphen/
  install -m644 hyph_en_US.dic $pkgdir/usr/share/hyphen/
  install -m644 th_en_US_v2.dat $pkgdir/usr/share/mythes/
  th_gen_idx.pl <th_en_US_v2.dat >th_en_US_v2.idx
  install -m644 th_en_US_v2.idx $pkgdir/usr/share/mythes/
}

