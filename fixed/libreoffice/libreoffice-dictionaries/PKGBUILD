pkgbase=libreoffice-dictionaries
_pkgbase=libreoffice-libs-extern-sys
pkgname=('libreoffice-dict-af' 'libreoffice-dict-ca' 'libreoffice-dict-cs' 'libreoffice-dict-da' 'libreoffice-dict-de-AT' 'libreoffice-dict-de-CH' 'libreoffice-dict-de-DE' 'libreoffice-dict-en' 'libreoffice-dict-es' 'libreoffice-dict-et' 'libreoffice-dict-fr' 'libreoffice-dict-gl' 'libreoffice-dict-he' 'libreoffice-dict-hr' 'libreoffice-dict-hu' 'libreoffice-dict-it' 'libreoffice-dict-ku-TR' 'libreoffice-dict-lt' 'libreoffice-dict-ne' 'libreoffice-dict-nl' 'libreoffice-dict-no' 'libreoffice-dict-pl' 'libreoffice-dict-pt' 'libreoffice-dict-ro' 'libreoffice-dict-ru' 'libreoffice-dict-sk' 'libreoffice-dict-sl' 'libreoffice-dict-sr' 'libreoffice-dict-sv' 'libreoffice-dict-sw' 'libreoffice-dict-th' 'libreoffice-dict-vi' 'libreoffice-dict-zu')
pkgver=3.3.0.1
pkgrel=1
arch=('any')
url="http://www.documentfoundation.org/"
license=('GPL')
groups=('libreoffice-dictionaries')
source=(http://download.documentfoundation.org/libreoffice/src/$_pkgbase-$pkgver.tar.bz2)
sha256sums=('06c6a2500161c286bdcb211922d4861a612ff4ed93468d27e9ba9e8c396e70ec')

package_libreoffice-dict-af() {
  pkgdesc="Afrikaans spell checker"
  depends=('hunspell' 'hyphen')
  _lang=af_ZA

  install -d $pkgdir/usr/share/{myspell,hyphen}
  cd "$srcdir/$_pkgbase-$pkgver/dictionaries/${_lang}"
  install -m644 ${_lang}.aff $pkgdir/usr/share/myspell/
  install -m644 ${_lang}.dic $pkgdir/usr/share/myspell/
  install -m644 hyph_${_lang}.dic $pkgdir/usr/share/hyphen/
}

package_libreoffice-dict-ca() {
  pkgdesc="Catalan spelling, hyphenation and thesaurus dictionaries"
  depends=('hunspell' 'hyphen' 'libmythes')
  _lang=ca
  _lang2=ca_ES

  install -d $pkgdir/usr/share/{myspell,hyphen,mythes}
  cd "$srcdir/$_pkgbase-$pkgver/dictionaries/${_lang}"
  install -m644 ${_lang}.aff $pkgdir/usr/share/myspell/
  install -m644 ${_lang}.dic $pkgdir/usr/share/myspell/
  install -m644 hyph_${_lang}.dic $pkgdir/usr/share/hyphen/
  install -m644 th_${_lang2}_v3.dat $pkgdir/usr/share/mythes/
  th_gen_idx.pl <th_${_lang2}_v3.dat >th_${_lang2}_v3.idx
  install -m644 th_${_lang2}_v3.idx $pkgdir/usr/share/mythes/
}

