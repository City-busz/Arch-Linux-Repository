# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=libreoffice-extension-typo
_pkgname=typo
pkgver=0.4.2
pkgrel=1
pkgdesc="Typography toolbar for Graphite font features: ligatures, small caps, old style numbers, automatic thousand separators for text and tables etc."
arch=('any')
url="http://extensions.services.openoffice.org/project/typo"
license=('LGPL')
groups=('libreoffice-extensions')
depends=('libreoffice')
optdepends=('ttf-linux-libertine-g: supported font')
source=(http://ftp.fsf.hu/OpenOffice.org_hu/$_pkgname/$_pkgname-$pkgver.oxt)
md5sums=('9d60b6cfa3ef1926848710bbcd11115b')

package() {
  mkdir -p $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/
  cp -R $srcdir/* $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/
  rm $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/$_pkgname-$pkgver.oxt
}
