groups=('libreoffice-extensions')

	cd ${srcdir}/extensions-install
	mkdir -p ${pkgdir}/usr/lib/ooo-3.3/share/extensions
	cp -r presenter-screen ${pkgdir}/usr/lib/ooo-3.3/share/extensions
}

