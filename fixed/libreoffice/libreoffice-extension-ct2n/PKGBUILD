# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=libreoffice-extension-ct2n
_pkgname=ConvertTextToNumber
pkgver=1.3.2
pkgrel=1
pkgdesc="LibreOffice extension that replaces numbers and dates, formatted as text, with real numbers."
arch=('any')
url="http://extensions.services.openoffice.org/project/CT2N"
license=('LGPL')
groups=('libreoffice-extensions')
depends=('libreoffice')
source=(http://download.go-oo.org/src/$_pkgname-$pkgver.oxt)
md5sums=('451ccf439a36a568653b024534669971')

package() {
  mkdir -p $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/
  cp -R $srcdir/* $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/
  rm $pkgdir/usr/lib/ooo-3.3/share/extensions/$_pkgname/$_pkgname-$pkgver.oxt
}
