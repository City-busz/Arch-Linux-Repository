post_install() {
    glib-compile-schemas usr/share/glib-2.0/schemas
    TIMEZONE=$(. /etc/rc.conf 2> /dev/null ; echo "${TIMEZONE:=Canada/Pacific}")
    echo "$TIMEZONE" > /etc/timezone
}

post_upgrade() {
    post_install $1
}

post_remove() {
	rm /etc/timezone
    glib-compile-schemas usr/share/glib-2.0/schemas
}
