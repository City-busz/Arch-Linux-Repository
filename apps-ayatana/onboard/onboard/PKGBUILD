# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=onboard
pkgver=0.95.1
pkgrel=1
pkgdesc="An on-screen keyboard useful on tablet PCs or for mobility impaired users."
arch=('any')
url="https://launchpad.net/onboard"
license=('GPL')
depends=('python2-gconf' 'python-virtkey' 'desktop-file-utils' 'hicolor-icon-theme' 'xdg-utils')
makedepends=('python-distutils-extra')
optdepends=('libappindicator: indicator support')
options=('!emptydirs')
install=$pkgname.install
source=(http://launchpad.net/$pkgname/${pkgver%.*}/$pkgver/+download/$pkgname-$pkgver.tar.gz)
md5sums=('80b802f6dd42f79a9d932abe8ca65951')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1
}
