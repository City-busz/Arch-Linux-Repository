# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=python-pywapi
_pkgname=pywapi
pkgver=0.2.2
pkgrel=1
pkgdesc="A python wrapper around the Yahoo! Weather, Google Weather and NOAA APIs"
arch=(any)
url="http://code.google.com/p/python-weather-api/"
license=(MIT)
depends=(python2)
source=(http://python-weather-api.googlecode.com/files/$_pkgname-$pkgver.tar.gz)
sha1sums=(fe3fa2915881da9cf19538070104e1fd6d43c377)

build() {
  cd "$srcdir/$_pkgname-$pkgver"

  python2 setup.py build
}

package() {
  cd "$srcdir/$_pkgname-$pkgver"

  python2 setup.py install --root=$pkgdir/ --optimize=1

  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
