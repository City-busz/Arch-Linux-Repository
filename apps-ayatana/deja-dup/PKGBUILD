# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=deja-dup
pkgver=20.0
pkgrel=1
pkgdesc="Simple backup tool, that hides the complexity of backing up the Right Way and uses duplicity as the backend"
arch=(i686 x86_64)
url="https://launchpad.net/deja-dup"
license=(GPL)
depends=(duplicity libgnome-keyring 'libnotify>=0.7' 'libdbusmenu-gtk3>=0.3.94' 'libunity>=3.4.2' dconf hicolor-icon-theme xdg-utils)
makedepends=('vala>=0.11.6' 'intltool>=0.40.0' itstool nautilus)
optdepends=('nautilus: backup extension')
options=(!libtool)
install=$pkgname.install
source=(http://launchpad.net/$pkgname/20/$pkgver/+download/$pkgname-$pkgver.tar.bz2)
md5sums=(ff377e6826611bc26f0075ec6ed74ac7)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var --libexecdir=/usr/lib/$pkgname \
              --disable-static --disable-schemas-compile
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
