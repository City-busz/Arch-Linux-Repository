# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=nant
pkgver=0.90
pkgrel=1
pkgdesc="A free .NET build tool, like make but without make's problems"
arch=('i686')
url="http://nant.sourceforge.net/"
license=('GPL')
depends=('mono')
source=(http://downloads.sourceforge.net/$pkgname/$pkgname-$pkgver-bin.tar.gz
        nant.sh)
md5sums=('4dd657f4f30bf2b885ab09c7ca5bab8c'
         '573e6f7db264104d00f5c5d59d39896a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  mkdir -p $pkgdir/usr/lib/NAnt
  cp -r bin $pkgdir/usr/lib/NAnt/
  install -Dm755 $srcdir/nant.sh $pkgdir/usr/bin/nant
}
