# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=gupnp-av
pkgver=0.10.1
pkgrel=1
pkgdesc="GUPnP A/V is a small utility library that aims to ease the handling and implementation of UPnP audio/video profiles"
arch=(i686 x86_64)
url="http://gupnp.org/"
license=(LGPL)
depends=('gupnp>=0.17.0')
makedepends=(gobject-introspection)
options=(!libtool)
source=(http://download.gnome.org/sources/$pkgname/0.10/$pkgname-$pkgver.tar.xz)
sha256sums=(41aeb5d243426b293c315788b41bc79a2be1f466eeff114cf6c89a37140f507e)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
