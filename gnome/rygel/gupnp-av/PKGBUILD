# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=gupnp-av
pkgver=0.8.0
pkgrel=1
pkgdesc="GUPnP A/V is a small utility library that aims to ease the handling and implementation of UPnP audio/video profiles"
arch=('i686' 'x86_64')
url="http://gupnp.org/"
license=('LGPL')
depends=('gupnp>=0.13')
makedepends=('gobject-introspection>=0.9.5')
options=('!libtool')
source=(http://gupnp.org/sites/all/files/sources/$pkgname-$pkgver.tar.gz)
md5sums=('8a41a3bb60b50fceb5ece71c0dc4dcfb')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
