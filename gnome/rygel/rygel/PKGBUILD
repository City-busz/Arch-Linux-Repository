# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=rygel
pkgver=0.10.3
pkgrel=1
pkgdesc="A collection of UPnP/DLNA devices, implemented through a plug-in mechanism"
arch=('i686' 'x86_64')
url="http://live.gnome.org/Rygel"
license=('LGPL')
depends=('gupnp-av>=0.7.0' 'gupnp-dlna>=0.5.0' 'libgee>=0.5.2' 'gtk3>=2.90.3' 'sqlite3>=3.5' 'hicolor-icon-theme' 'xdg-utils')
makedepends=('vala' 'intltool>=0.40.0')
options=('!libtool')
install=$pkgname.install
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/${pkgver%.*}/$pkgname-$pkgver.tar.xz)
sha256sums=('29af8527a3202d9b922d2affd3e47408c12ee81a9eebc3c445b63ac19c0217ee')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
