# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=gupnp-dlna
pkgver=0.6.3
pkgrel=1
pkgdesc="A library to ease DLNA-related bits for applications using gupnp"
arch=(i686 x86_64)
url="http://gupnp.org/"
license=('LGPL')
depends=('gstreamer0.10-base-plugins>=0.10.32')
options=(!libtool)
source=(http://download.gnome.org/sources/$pkgname/0.6/$pkgname-$pkgver.tar.xz)
sha256sums=(9aab53fea6f5918c3e8920ab5042cd4b7f897de9aa0251f034ec22d7b2591d94)

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
