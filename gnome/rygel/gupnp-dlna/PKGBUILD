# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=gupnp-dlna
pkgver=0.6.1
pkgrel=1
pkgdesc="A library to ease DLNA-related bits for applications using gupnp"
arch=('i686' 'x86_64')
url="http://gupnp.org/"
license=('LGPL')
depends=('gstreamer0.10-base-plugins>=0.10.32')
options=('!libtool')
source=(http://gupnp.org/sites/all/files/sources/$pkgname-$pkgver.tar.gz)
md5sums=('0265d8864edcddc3367dcfe431c3bb53')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
}
