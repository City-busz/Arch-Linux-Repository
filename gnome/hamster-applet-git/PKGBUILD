# Maintainer: György Balló <ballogy@freestart.hu>
_pkgname=hamster-applet
pkgname=$_pkgname-git
pkgver=20111011
pkgrel=1
pkgdesc="GNOME time tracking applet"
arch=(any)
url="http://projecthamster.wordpress.com/"
license=(GPL)
depends=(dbus-python python2-gconf python-notify python-wnck pyxdg hicolor-icon-theme xdg-utils)
makedepends=(git intltool gnome-doc-utils)
optdepends=('python-evolution: integration with evolution')
provides=(hamster-applet)
conflicts=(hamster-applet)
options=(!emptydirs)
install=$_pkgname.install

_gitroot="git://git.gnome.org/hamster-applet"
_gitname="hamster-applet"

build() {
  cd "$srcdir"
  msg "Connecting to GIT server...."

  if [ -d $_gitname ] ; then
    cd $_gitname && git pull origin
    msg "The local files are updated."
  else
    git clone $_gitroot $_gitname
  fi

  msg "GIT checkout done or server timeout"
  msg "Starting make..."

  rm -rf "$srcdir/$_gitname-build"
  git clone "$srcdir/$_gitname" "$srcdir/$_gitname-build"
  cd "$srcdir/$_gitname-build"

  #
  # BUILD HERE
  #

  find . -type f | xargs sed -i 's@^#!.*python$@#!/usr/bin/python2@'

  python2 ./waf configure --prefix=/usr
  python2 ./waf build
}

package() {
  cd "$srcdir/$_gitname-build"

  python2 ./waf install --destdir=$pkgdir

  mv "$pkgdir/etc/gconf" "$pkgdir/usr/share"
}
