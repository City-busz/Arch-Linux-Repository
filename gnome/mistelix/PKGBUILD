# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=mistelix
pkgver=0.33
pkgrel=2
pkgdesc="Author DVDs and slideshows"
arch=('i686' 'x86_64')
url="http://live.gnome.org/Mistelix"
license=('MIT')
depends=('gstreamer0.10-base-plugins>=0.10.3' 'gstreamer0.10-ffmpeg' 'libgnome-sharp>=2.10' 'mono-addins>=0.3' 'gnome-desktop2' 'xdg-utils')
makedepends=('intltool>=0.35')
optdepends=('gstreamer0.10-good-plugins: Extra media codecs'
            'gstreamer0.10-bad-plugins: Extra media codecs'
            'gstreamer0.10-ugly-plugins: Extra media codecs')
options=(!libtool)
install=$pkgname.install
source=(http://gent.softcatala.org/jmas/$pkgname/$pkgname-$pkgver.tar.gz)
md5sums=('954d351bff0e47a5092c55bb7bb5038a')

build() {
  cd "$srcdir/$pkgname-$pkgver"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install
  install -Dm644 COPYING ${pkgdir}/usr/share/licenses/$pkgname/COPYING
}
