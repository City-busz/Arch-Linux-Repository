# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=gnome-defaults-list
_pkgname=desktop-file-utils
pkgver=0.16
pkgrel=1
_debianrel=0
_ubunturel=4
pkgdesc="Default file associations for GNOME environment"
arch=('i686' 'x86_64')
url="http://packages.ubuntu.com/source/maverick/desktop-file-utils"
license=('GPL')
source=(http://archive.ubuntu.com/ubuntu/pool/main/d/$_pkgname/${_pkgname}_$pkgver-${_debianrel}ubuntu${_ubunturel}.diff.gz)
md5sums=('ca8bba42179e9da522c3b67d1a56f310')

build() {
  install -d "$pkgdir/usr/share/applications"
  sed -n '/+\[Default Applications]/,/^---.*/ {s/^+//; s/^---.*//; s/openoffice\.org-//; p}' "$srcdir/${_pkgname}_$pkgver-${_debianrel}ubuntu${_ubunturel}.diff" > "$pkgdir/usr/share/applications/defaults.list"
  sed -i '/application\/x-deb=.*/application\/x-debian-package=.*/ d' $pkgdir/usr/share/applications/defaults.list
}
