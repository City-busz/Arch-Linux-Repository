# Contributor: simo <simo@archlinux.org>

pkgname=python-sane
pkgver=1.1.7
pkgrel=1
pkgdesc="Provides an interface to the SANE scanner and frame grabber interface for Linux"
arch=('any')
url="http://www.pythonware.com/products/pil/index.htm"
license=('custom:"pil"')
depends=('python-imaging') 
source=(http://effbot.org/downloads/Imaging-$pkgver.tar.gz)
md5sums=('fc14a54e1ce02a0225be8854bfba478e')

build() {
  cd $srcdir/Imaging-$pkgver/Sane

  python2 setup.py install --root=$pkgdir/ --optimize=1

  install -Dm644 $srcdir/Imaging-$pkgver/README $pkgdir/usr/share/licenses/$pkgname/README
}
