# Maintainer: György Balló <ballogy@freestart.hu>
pkgname=seahorse-sharing
pkgver=3.2
pkgrel=1
pkgdesc="PGP public key sharing using DNS-SD and HKP"
arch=(i686 x86_64)
url="http://git.gnome.org/browse/seahorse-sharing/"
license=(GPL)
depends=(gtk3 gpgme libsoup)
makedepends=(intltool)
source=(http://ftp.gnome.org/pub/GNOME/sources/$pkgname/3.2/$pkgname-$pkgver.tar.xz)
sha256sums=(797ff36d7426822667421f11c391c8822c62b0ff24b12d40e1a6d9fb88d49111)

build() {
  cd "$srcdir/$pkgname-$pkgver"
  export CFLAGS="$CFLAGS -D_FILE_OFFSET_BITS=64"

  ./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var \
              --disable-static
  make
}

package() {
  cd "$srcdir/$pkgname-$pkgver"

  make DESTDIR="$pkgdir/" install

  # Drop translations that don't use the right domain (reported upstream by mail)
  rm -r "$pkgdir/usr/share/locale"
}
