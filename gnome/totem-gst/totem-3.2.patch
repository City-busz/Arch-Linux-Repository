+			                    MODEL_RESULTS_THUMBNAIL, thumbnail,
+			                    MODEL_RESULTS_IS_PRETHUMBNAIL, TRUE,
+			                    MODEL_RESULTS_DESCRIPTION, description,
+			                    -1);
+
+			if (thumbnail != NULL) {
+				g_object_unref (thumbnail);
+			}
+			g_free (description);
+		}
+
+		g_object_unref (media);
+	}
+
+	if (remaining == 0) {
