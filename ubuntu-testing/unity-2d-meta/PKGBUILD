pkgname=unity-2d-meta
pkgver=1.207
pkgrel=1
pkgdesc="Ubuntu's gnome-panel with default indicators and Notify OSD (metapackage)"
arch=('any')
url="http://packages.ubuntu.com/maverick/ubuntu-desktop"
license=('GPL')
source=(2d-ubuntu.session
        unity-2d.desktop)
#        unity-2d.xml
#        unity-2d.sh
md5sums=('4c685f03f3ea19de948ecf197be0ba1b'
         '59cfc36e552e347fed176a5be2f925cf')
depends=('unity-2d' 'unity-place-applications' 'appmenu-gtk' 'indicator-application' 'indicator-appmenu' 'indicator-datetime' 'indicator-me' 'indicator-messages' 'indicator-session' 'indicator-sound')

build() {
  /bin/true
}

package() {
  cd "$srcdir"
  install -Dm644 unity-2d.desktop "$pkgdir/usr/share/xsessions/unity-2d.desktop"
  install -Dm644 2d-ubuntu.session "$pkgdir/usr/share/gnome-session/sessions/2d-ubuntu.session"
#  install -Dm644 unity-2d.xml "$pkgdir/usr/share/ubuntu/unity-2d.xml"
#  install -Dm755 unity-2d.sh "$pkgdir/usr/bin/unity-2d"
}
