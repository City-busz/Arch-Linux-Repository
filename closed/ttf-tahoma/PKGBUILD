# Contributor: dale <dale@archlinux.org>

pkgname=ttf-tahoma
pkgver=3.14
pkgrel=2
pkgdesc="Tahoma and Tahoma Bold fonts from Microsoft"
arch=('any')
url="http://www.microsoft.com/typography/fonts/family.aspx?FID=19"
license=('custom')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
makedepends=('cabextract')
install=ttf.install
source=(http://download.microsoft.com/download/ie6sp1/finrel/6_sp1/W98NT42KMeXP/EN-US/IELPKTH.CAB
        LICENSE)
md5sums=('358584cddb75ac90472c25f01b308ebe'
         'dc2fbaad72b8d0eab8202818e3910261')

build() {
  cd "$srcdir"
  cabextract --lowercase --directory="$srcdir" IELPKTH.CAB -F '*.ttf' || return 1
  install -Dm644 tahoma.ttf "$pkgdir/usr/share/fonts/TTF/tahoma.ttf"
  install -Dm644 tahomabd.ttf "$pkgdir/usr/share/fonts/TTF/tahomabd.ttf"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$pkgname/LICENSE"
}
